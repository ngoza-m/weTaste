<div class="container">
    <%= render "shared/search" %>

    <h3 style="margin-top: 30px;"><em>Places You'll Love</em></h3>

<% @restaurants.each do |restaurant| %>

    <div class="home-card">
        <img src="<%= restaurant.photos %>" class="home-card-image">
        <div class="home-card-content">
            <p><%= link_to restaurant.name, restaurant %> </p>
            <!-- <p><%= restaurant.url %></p> -->
            <p><%= restaurant.location %></p>
            <!-- <p><%= link_to "Show this restaurant", restaurant %></p> -->
        </div>
    </div>    


<% end %>

<!-- ICONS -->
<div class="icon-group">
    <span class="material-symbols-outlined">local_cafe</span></div>


</div>