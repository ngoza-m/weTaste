<div class="container">
    
    <%= render "shared/search" %>

    <h2 style="font-weight: 500;"> <%= params[:category].upcase %></h2>

    <% if @restaurants_by_category.present? %>
    

    <% @restaurants_by_category.each do |restaurant| %>
        <%= link_to restaurant_path(restaurant), class: "search-card-link" do %>
        <div class="search-card justify-content-start">
            <img src="<%= restaurant.photos %>" class="search-card-image">
            <div class="search-card-content">
            <div class="text-content-name">
            <h5><%= restaurant.name %></h5>
            <p><%= restaurant.location %></p>
            </div>
            <% if restaurant.wishlists.count > 0 %>
            <div class="wishlist-content">
                <p><%= restaurant.wishlists.count %> ❤️</p>
                </div>
            <% end %>
            </div>
        </div>
        <% end %>
    <% end %>

    <% else %>
        <p><em>No restaurants found in <%= params[:category] %></em></p>
    <% end %>
    </div>
