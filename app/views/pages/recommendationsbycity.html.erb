<% @sorted_recs_by_city %>

<h4> Your <%= params[:city] %> Recommendations</h4>

<div class="row">
<% @sorted_recs_by_city.each do |rec| %>
            <div class="col-sm-4">
                <div class="card">
                    <img src="<%= rec.restaurant.photos %>" class="card-img-top" alt="<%= rec.restaurant.name %>">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= link_to rec.restaurant.name, restaurant_path(rec.restaurant) %></h5>
                        <p class="card-text text-center"><%= rec.restaurant.city %></p>
                        <p class="card-text text-center"><%= rec.content %></p>
                    </div>
                </div>
            </div>
<% end %>
</div>