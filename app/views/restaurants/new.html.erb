<h1>Create a Restaurant</h1>

<%= form_with(model: @restaurant, local: true) do |form| %>
  <div>
    <%= form.label :name, "Restaurant Name" %><br>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :address, "Address" %><br>
    <%= form.text_field :address, required: true %>
  </div>

  <div>
    <%= form.label :website, "Website" %><br>
    <%= form.url_field :website %>
  </div>

  <div>
    <%= form.submit "Create Restaurant" %>
  </div>
<% end %>

<%= link_to 'Back', restaurants_path %>
