<div class="search-bar row justify-content-center">
<div class="col-sm-8 my-3">



    <%= form_with url: search_path, method: :get, class: "search-form d-flex" do %>
      <div class="input-group">
        <%= text_field_tag :query, params[:query], class: "form-control search-input", placeholder: "Enter a city to explore..." %>
        <%= button_tag(type: 'submit', class: 'btn btn-secondary search-button') do %>
          <i class="fa fa-search"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
